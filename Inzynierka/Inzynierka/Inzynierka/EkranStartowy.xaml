<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inzynierka.EkranStartowy"
              xmlns:local="clr-namespace:Inzynierka.CustomRenderer; assembly=Inzynierka"
             xmlns:control="clr-namespace:Inzynierka.UserControls">
    <Grid>
        <Grid x:Name="Poziomy" RowSpacing="0" BackgroundColor="Aqua">
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="84*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <local:MainGrid Grid.Row="1" StartColor="#e2edff" EndColor="#abbddb" BackgroundColor="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <control:PrzyciskWyjscia Grid.Column="0"/>
                <control:PrzyciskWejscia Grid.Column="2"/>

            </local:MainGrid>
            
        </Grid>
        
        <Grid x:Name="Pionowy">
            
        </Grid>
    </Grid>
</ContentPage>